// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet-mssql
{
  "name": "C# (.NET) and MS SQL",
  "dockerComposeFile": "compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/dotnet",
  "containerEnv": {
    "DOTNET_ROLL_FORWARD": "Major"
  },
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {},
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-dotnettools.csharp",
        "EditorConfig.EditorConfig",
        "streetsidesoftware.code-spell-checker",
        "DavidAnson.vscode-markdownlint",
        "vivaxy.vscode-conventional-commits",
        "Gruntfuggly.todo-tree",
        "shardulm94.trailing-spaces",
        "redhat.vscode-yaml",
        "usernamehw.errorlens",
        "ms-azuretools.vscode-docker",
        "ms-dotnettools.csdevkit",
        "csharpier.csharpier-vscode",
        "exiasr.hadolint",
        "patcx.vscode-nuget-gallery"
      ]
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [
  //   5000,
  //   5001,
  //   "db:1433"
  // ],
  // "portsAttributes": {
  //   "5001": {
  //     "protocol": "https"
  //   }
  // },
  // postCreateCommand.sh parameters: $1=SA password, $2=dacpac path, $3=sql script(s) path
  "postCreateCommand": "git config --local include.path ../.gitconfig && dotnet tool restore && bash .devcontainer/mssql/postCreateCommand.sh 'Sql12345678Desa' './bin/Debug/' './.devcontainer/mssql/'",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "installSsl": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/dhoeric/features/hadolint:1": {},
    "ghcr.io/shyim/devcontainers-features/bun:0": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ]
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
